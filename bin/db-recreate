#!/usr/bin/env bash

set -x

dropdb iry_development
dropdb iry_test

createdb iry_development
createdb iry_test

set +x

# Exit on any error
set -e

echo "=== development ==="
psql --db iry_development < db/schema.pgsql
echo

echo "=== test ==="
psql --db iry_test < db/schema.pgsql
echo

echo "SQLITE"
mkdir -p storage
rm -f storage/test.sqlite3
sqlite3 storage/test.sqlite3 < db/schema-sqlite.sql
